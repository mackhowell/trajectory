    <Switch
        android:id="@+id/bigSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#1A1A1A"
        android:textOff="OFF"
        android:textOn="ON" />

    <SeekBar
        android:id="@+id/accelerometer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bigSwitch"
        android:layout_margin="20dip"
        android:layout_marginTop="100dp"
        android:background="#66FFCC"
        android:progress="0" />
    
	        <TextView
	        android:id="@+id/accelerometerProgress"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:textColor="#000099"
	        android:textSize="20sp"
	        android:layout_below="@+id/accelerometer"
	        android:layout_marginLeft="20dp"
	        android:layout_marginTop="-80dp" />


    <SeekBar
        android:id="@+id/pressure"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accelerometer"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dip"
        android:layout_marginTop="100dp"
        android:background="#AA6622"
        android:progress="0" />
    
    		<TextView
	        android:id="@+id/pressureProgress"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:textColor="#000099"
	        android:textSize="20sp"
	        android:layout_below="@+id/pressure"
	        android:layout_marginLeft="20dp"
	        android:layout_marginTop="-80dp" />

    <SeekBar
        android:id="@+id/magnetometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pressure"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dip"
        android:layout_marginTop="100dp"
        android:background="#CCFF66"
        android:progress="0" />
    
    		<TextView
	        android:id="@+id/magnetometerProgress"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:textColor="#000099"
	        android:textSize="20sp"
	        android:layout_below="@+id/magnetometer"
	        android:layout_marginLeft="20dp"
	        android:layout_marginTop="-80dp" />

